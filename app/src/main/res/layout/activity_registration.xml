<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".Activities.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Hereâ€™s\nyour first\nstep with \nus! "
                     />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/shoot" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputUsername"
                        style="@style/parent">

                        <EditText
                            android:id="@+id/editTextName"
                            style="@style/modifiedEditText"
                            android:hint="Username"
                            android:inputType="textPersonName"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputPassword"
                        app:endIconMode="password_toggle"
                        style="@style/parent">

                        <EditText
                            android:id="@+id/editTextPassword"
                            style="@style/modifiedEditText"
                            android:hint="Password"
                            android:inputType="numberPassword"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputConfirmPassword"
                        app:endIconMode="password_toggle"
                        style="@style/parent">

                        <EditText
                            android:id="@+id/editTextconfirmPassword"
                            style="@style/modifiedEditText"
                            android:hint="Confirm Password"
                            android:inputType="numberPassword"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputTeam"
                        style="@style/parent">

                        <EditText
                            android:id="@+id/editTextTeam"
                            style="@style/modifiedEditText"
                            android:hint="Team Name"
                            android:inputType="text"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputAge"
                        style="@style/parent">

                        <EditText
                            android:id="@+id/editTextAge"
                            style="@style/modifiedEditText"
                            android:hint="Age"
                            android:inputType="text"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputHeight"
                        style="@style/parent">

                        <EditText
                            android:id="@+id/editTextHeight"
                            style="@style/modifiedEditText"
                            android:hint="Height"
                            android:inputType="text"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register a player or manager?"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="16dp"
                        android:layout_marginBottom="8dp"
                        />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rbPlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Player"/>
                        <RadioButton
                            android:id="@+id/rbManager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Manager"/>
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="16dp"
                        android:layout_marginBottom="16dp"
                        />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/gk"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="GK" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/rb"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RB" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/lb"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LB" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/cb"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CB" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/rm"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RM" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/lm"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LM" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/cdm"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CDM" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/cam"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CAM" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/rfw"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RFW" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/lfw"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LFW" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/doc"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ST" />

                        </com.google.android.material.chip.ChipGroup>


<!--                    <com.google.android.material.textfield.TextInputLayout-->
<!--                        android:id="@+id/textInputId"-->
<!--                        style="@style/parent"-->
<!--                        android:layout_marginTop="@dimen/loginViewsMargin">-->

<!--                        <EditText-->
<!--                            android:id="@+id/editTextId"-->
<!--                            style="@style/modifiedEditText"-->
<!--                            android:hint="ID No."-->
<!--                            android:inputType="text"-->
<!--                            android:clickable="false"-->
<!--                            android:cursorVisible="false"-->
<!--                            android:focusable="false"-->
<!--                            android:focusableInTouchMode="false"-->
<!--                            />-->
<!--                    </com.google.android.material.textfield.TextInputLayout>-->


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cirRegisterButton"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:text="Register"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_side_bg2" />

</RelativeLayout>